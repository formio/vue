{
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es7", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "outDir": "lib",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "parser": "typescript-eslint-parser",
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}